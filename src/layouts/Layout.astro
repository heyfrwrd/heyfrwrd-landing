---
import i18next from "i18next";
import HeadHrefLangs from "@/components/HeadHrefLangs.astro";
import Header from "@/components/Header.astro";
import "@/styles/global.css";

const currentLocale = Astro.currentLocale || "en";
const SITE_URL = import.meta.env.SITE;
const path = Astro.url.pathname;
const canonicalUrl = new URL(path, SITE_URL).toString();
---

<html lang={currentLocale}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="robots" content="index, follow" />

    <!-- Canonical -->
    <link rel="canonical" href={canonicalUrl} />

    <!-- Alternates -->
    <HeadHrefLangs />

    <title>{i18next.t("site.title")}</title>
    <meta name="description" content={i18next.t("site.description")} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:title" content={i18next.t("site.title")} />
    <meta property="og:description" content={i18next.t("site.description")} />
    <meta property="og:image" content={`${SITE_URL}/src/assets/og.webp`} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta
      property="og:locale"
      content={currentLocale === "es" ? "es_ES" : "en_US"}
    />
    <meta property="og:site_name" content="heyfrwrd.me" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@heyfrwrdme" />
    <meta name="twitter:creator" content="@heyfrwrdme" />
    <meta name="twitter:url" content={canonicalUrl} />
    <meta name="twitter:title" content={i18next.t("site.title")} />
    <meta name="twitter:description" content={i18next.t("site.description")} />
    <meta name="twitter:image" content={`${SITE_URL}/src/assets/og.webp`} />

    <!-- Self-hosted Outfit font -->
    <link
      rel="preload"
      href="/fonts/Outfit-VariableFont_wght.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <link rel="stylesheet" href="/fonts/outfit.css" />

    <!-- Schema.org JSON-LD -->
    <script
      type="application/ld+json"
      set:html={JSON.stringify({
        "@context": "https://schema.org",
        "@graph": [
          {
            "@type": "Organization",
            "@id": `${SITE_URL}#organization`,
            name: i18next.t("site.title"),
            url: SITE_URL,
            logo: {
              "@type": "ImageObject",
              url: `${SITE_URL}/favicon.svg`,
              width: "512",
              height: "512",
            },
            description: i18next.t("site.description"),
            sameAs: [
              "https://twitter.com/heyfrwrd",
              "https://instagram.com/heyfrwrd",
            ],
          },
          {
            "@type": "WebSite",
            "@id": `${SITE_URL}#website`,
            url: SITE_URL,
            name: i18next.t("site.title"),
            description: i18next.t("site.description"),
            publisher: {
              "@id": `${SITE_URL}#organization`,
            },
            inLanguage: currentLocale,
            potentialAction: {
              "@type": "ReadAction",
              target: [SITE_URL],
            },
          },
          {
            "@type": "WebPage",
            "@id": canonicalUrl,
            url: canonicalUrl,
            name: i18next.t("site.title"),
            isPartOf: {
              "@id": `${SITE_URL}#website`,
            },
            about: {
              "@id": `${SITE_URL}#organization`,
            },
            description: i18next.t("site.description"),
            inLanguage: currentLocale,
            potentialAction: [
              {
                "@type": "ReadAction",
                target: [canonicalUrl],
              },
            ],
          },
        ],
      })}
    />
  </head>
  <body class="max-h-screen m-0 w-full">
    <Header />
    <slot />
  </body>
</html>
