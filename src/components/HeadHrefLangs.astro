---
import { localizePath } from "astro-i18next";
import config from "../../astro-i18next.config.mjs";

const { locales } = config;
const currentPath = Astro.url.pathname;
---

{
  locales.map((locale: string) => (
    <link
      rel="alternate"
      hreflang={locale}
      href={new URL(
        localizePath(currentPath, locale),
        Astro.url.origin
      ).toString()}
    />
  ))
}
