---
import Sparkle from "./Sparkle.astro";
import { Github, Instagram, Linkedin, Mail } from "@lucide/astro";
import { Sparkles } from "@lucide/astro";
import InputIsland from "@/components/InputIsland.tsx";

const N = 12;
const sparkles = Array.from({ length: N }).map(() => ({
  size: 12 + Math.random() * 24, // tamaño entre 12 y 36
  top: Math.random() * 100, // porcentaje vertical
  left: Math.random() * 100, // porcentaje horizontal
  opacity: (20 + Math.random() * 50).toFixed(0), // opacidad entre 20% y 70%
}));
---

<div class="relative overflow-hidden min-h-[500px]">
  <!--   {
    sparkles.map((s, i) => (
      <div
        class="absolute transform"
        style={`top: ${s.top}%; left: ${s.left}%;`}
      >
        <Sparkle size={s.size} className={`text-[#683fe7]/50 -z-10`} />
      </div>
    ))
  } -->
  <!-- Contenido principal -->
  <div class="flex flex-col items-center justify-start px-8 text-center">
    <!-- Insignia “Próximamente” -->
    <div
      class="flex items-center gap-2 bg-transparent rounded-md p-2 border border-gray-700/20 my-5"
    >
      <Sparkles size={14} class="text-gray-700/20" fill="currentColor" />
      <span class="text-gray-700 font-medium">¡Próximamente disponible!</span>
    </div>

    <!-- Título -->
    <div class="max-w-5xl mb-2">
      <h1
        class="text-6xl md:text-7xl lg:text-8xl font-bold text-gray-900 leading-none"
      >
        <span class="text-[#683fe7]">Automatiza </span>
        tus DMs con IA que suena como tú
      </h1>
    </div>

    <!-- Descripción -->
    <p
      class="text-gray-600 text-lg md:text-xl max-w-3xl mb-12 leading-relaxed my-4"
    >
      Responde automáticamente a reacciones, menciones y preguntas frecuentes.
      Ahorra tiempo, gana leads y mantén tu estilo auténtico.
    </p>

    <!-- React Island: hidrata solo este fragmento -->
    <InputIsland client:load />

    <!-- Iconos sociales -->
    <div class="flex items-center gap-3 mt-10 p-2">
      <a
        href="https://github.com/heyfrwrd"
        aria-label="GitHub"
        class="w-8 h-8 bg-white/80 hover:bg-white/90 backdrop-blur-sm rounded-full flex items-center justify-center transition-all duration-200 border-white/40 shadow-md"
      >
        <Github class="text-gray-600 hover:text-gray-800" size={18} />
      </a>
      <a
        href="https://www.instagram.com/heyfrwrd/"
        aria-label="Instagram"
        class="w-8 h-8 bg-white/80 hover:bg-white/90 backdrop-blur-sm rounded-full flex items-center justify-center transition-all duration-200 border-white/40 shadow-md"
      >
        <Instagram class="text-gray-600 hover:text-gray-800" size={18} />
      </a>
      <a
        href="https://www.linkedin.com/company/heyfrwrd/"
        aria-label="LinkedIn"
        class="w-8 h-8 bg-white/80 hover:bg-white/90 backdrop-blur-sm rounded-full flex items-center justify-center transition-all duration-200 border-white/40 shadow-md"
      >
        <Linkedin class="text-gray-600 hover:text-gray-800" size={18} />
      </a>
      <a
        href="mailto:marlon.castro@heyfrwrd.me"
        aria-label="Email"
        class="w-8 h-8 bg-white/80 hover:bg-white/90 backdrop-blur-sm rounded-full flex items-center justify-center transition-all duration-200 border-white/40 shadow-md"
      >
        <Mail class="text-gray-600 hover:text-gray-800" size={18} />
      </a>
    </div>
  </div>
</div>
