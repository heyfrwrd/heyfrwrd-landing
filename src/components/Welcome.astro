---
import background from "@/assets/background.svg";
import ComingSoon from "./ComingSoon";
import { getLanguageFromPath } from "@/utils/translations";

// Get language from current URL path
const currentLanguage = getLanguageFromPath(Astro.url.pathname);
---

<div id="container" class="h-full">
  <img
    class="fixed top-0 left-0 w-full h-full -z-10 blur-2xl"
    id="background"
    src={background.src}
    alt=""
    fetchpriority="high"
  />
  <main class="flex justify-center min-h-[calc(100vh-56px)] w-fit">
    <section id="hero" class="flex items-center flex-col justify-center p-4">
      <ComingSoon client:load language={currentLanguage} />
    </section>
  </main>
</div>
