---
import background from "@/assets/background.svg";
import ComingSoon from "./ComingSoon.astro";
---

<div id="container" class="h-full">
  <img
    class="fixed top-0 left-0 w-full h-full -z-10 blur-2xl"
    id="background"
    src={background.src}
    alt=""
    fetchpriority="high"
  />
  <main class="flex justify-center min-h-[calc(100vh-56px)]">
    <section id="hero" class="flex items-center flex-col justify-center p-4">
      <ComingSoon />
    </section>
  </main>
</div>
