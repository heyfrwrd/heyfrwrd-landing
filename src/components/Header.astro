---
import Image from "astro/components/Image.astro";
import logo from "@/assets/logo.png";
import i18next from "i18next";

const currentLanguage = i18next.language || "es";
const langPrefix = currentLanguage === "en" ? "/en" : "/es";
---

<header class="flex justify-between items-center px-6 py-2 w-full rounded-4xl">
  <a class="flex items-center gap-3" href={langPrefix + "/"}>
    <div class="w-10 h-10 bg-black rounded-xl flex items-center justify-center">
      <Image src={logo} alt="heyfrwrd logo" class="w-8 h-8" />
    </div>
    <span class="text-2xl font-bold text-gray-900 tracking-tight">
      heyfrwrd
    </span>
  </a>
</header>
