---
export interface Props {
  id?: string;
  name?: string;
  type?:
    | "button"
    | "checkbox"
    | "color"
    | "date"
    | "datetime-local"
    | "email"
    | "file"
    | "hidden"
    | "image"
    | "month"
    | "number"
    | "password"
    | "radio"
    | "range"
    | "reset"
    | "search"
    | "submit"
    | "tel"
    | "text"
    | "time"
    | "url"
    | "week";
  placeholder?: string;
  required?: boolean;
  disabled?: boolean;
  class?: string;
}
const {
  id,
  name,
  type = "text",
  placeholder = "",
  required = false,
  disabled = false,
  class: className = "",
} = Astro.props as Props;
---

<input
  id={id}
  name={name}
  type={type}
  placeholder={placeholder}
  required={required}
  disabled={disabled}
  class={`mt-1 w-full rounded-md border-gray-300 border-2 focus:border-2 focus-visible:outline-0 focus:border-black p-2 ${className}`}
/>
