---
import MultiStepForm from "@/components/MultiStepForm";
import Layout from "@/layouts/Layout.astro";
import { getLanguageFromPath } from "@/utils/translations";

// Get language from current URL path (Spanish is default for root)
const currentLanguage = getLanguageFromPath(Astro.url.pathname);
---

<Layout>
  <MultiStepForm client:load language={currentLanguage} />
</Layout>
